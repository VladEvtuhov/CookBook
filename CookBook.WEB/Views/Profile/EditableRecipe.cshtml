@model CookBook.WEB.Models.EditRecipeViewModel
@{
    Layout = null;
}
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/profile/refresh-profile-recipes")
@Scripts.Render("~/bundles/profile/create-recipe")
@Styles.Render("~/Content/profile/cr")
@Scripts.Render("~/bundles/profile/edit-values/js")
<div class="modal fade bd-example-modal-lg" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">EDIT RECIPE</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm(MVC.Profile.EditableRecipe(null), new AjaxOptions { HttpMethod = "POST", OnComplete = "refresh" }))
                {
                    <input id="creatorEmail" type="hidden" name="CreatorEmail">
                    <input id="recipeId" type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="title-name">Title:</label>
                        <input type="text" class="form-control" name="Title" id="title-name" value="@Model.Title">
                    </div>
                    <div class="form-group">
                        <label for="sd-name">Short description:</label>
                        <input type="text" class="form-control" name="ShortDescription" id="sd-name" value="@Model.ShortDescription">
                    </div>
                    <div class="form-group">
                        <label for="url-name">Image url:</label>
                        <input type="text" class="form-control" name="ImageUrl" id="url-name" value="@Model.ImageUrl">
                    </div>
                    <div class="form-group">
                        <input id="categoryValue" type="hidden" value="@Model.Category">
                        <label for="category">Category:</label>
                        <select id="category" class="form-control" name="Category"></select>
                    </div>
                    <div class="form-group">
                        <input id="ingregientValue" type="hidden" value="@Model.IngredientType">
                        <label for="ingredient">Ingredient type:</label>
                        <select id="ingredient" name="IngredientType" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <input id="countryValue" type="hidden" value="@Model.CuisineCountry">
                        <label for="cuisine">Cuisine country:</label>
                        <select id="cuisine" name="CuisineCountry" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <input id="cookValue" type="hidden" value="@Model.CookingMethod">
                        <label for="method">Cooking method:</label>
                        <select id="method" name="CookingMethod" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Context:</label>
                        <textarea class="form-control" name="Content" id="message-text">@Model.Content</textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button id="createRecipe" type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>