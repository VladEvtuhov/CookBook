@Scripts.Render("~/bundles/profile")
@Styles.Render("~/Content/profile/user-profile")
<div id="loader" data-request-url="@Url.Action(MVC.Profile.About(Request.Params["email"]))"></div>
<div id="newrecipe">

</div>
<ul class="nav nav-tabs mg-top-50">
    <li class="nav-item">
        @Ajax.ActionLink("About me", MVC.Profile.About(@Request.Params["email"]), new AjaxOptions { UpdateTargetId = "results" }, new { @class = "nav-link active", data_toggle = "tab" })
    </li>
    <li class="nav-item">
        @Ajax.ActionLink("My recipes", MVC.Profile.UserRecipes(@Request.Params["email"]), new AjaxOptions { UpdateTargetId = "results" }, new { @class = "nav-link", data_toggle = "tab" })
    </li>
</ul>
<div id="results" class="jumbotron mg-top-1">

</div>